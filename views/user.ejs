<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link
      rel="icon"
      href="https://cdn.glitch.global/4cf42ca2-4f10-4b7c-b9ba-da3c09eb0926/vecteezy_plant-in-pot-icon_9376677_486.png?v=1698151708567"
    />
    <title>Rootz - User Dashboard</title>
    <!-- Need to add style sheet -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/skeleton/2.0.4/skeleton.min.css"
    />
    <style>
      img {
        width: 7.5%;
      }
    </style>
    <!-- Need to add js file -->
  </head>
  <header>
    <div id="title">
      <a href="/users/home"
        ><img
          id="plantIcon"
          src="https://cdn.glitch.global/4cf42ca2-4f10-4b7c-b9ba-da3c09eb0926/vecteezy_plant-in-pot-icon_9376677_486.png?v=1698151708567"
          alt="Potted Plant Icon"
      /></a>
      <h1>Rootz</h1>
    </div>
    <a href="/users/dashboard"
      ><img
        id="userIcon"
        src="https://cdn.glitch.global/4cf42ca2-4f10-4b7c-b9ba-da3c09eb0926/userIcon.png?v=1698152143072"
        alt="User Icon"
    /></a>
  </header>
  <body>
    <h2>My Rootz</h2>

    <!-- Send password update success messages to user -->
    <ul>
      <% if(messages.success_msg) { %>
      <li><%= messages.success_msg %></li>
      <% } %>
    </ul>

    <!-- Send error messages to user -->
    <ul>
      <% if (messages.error) { %>
      <li><%= messages.error %></li>
      <% } %>
    </ul>

    <!-- Logout button -->
    <div>
      <a href="/users/logout">Logout</a>
    </div>

    <!-- Change password button -->
    <div>
      <a href="/users/changePass">Change Password</a>
    </div>

    <!-- Say hello to user by name -->
    <h3>Hello <%= user.charAt(0).toUpperCase() + user.slice(1) %></h3>

    <div id="liked-plants">
      <h3>Liked Plants</h3>
      <div class="plant-card">
        <img
          class="plant"
          src="https://cdn.glitch.global/4cf42ca2-4f10-4b7c-b9ba-da3c09eb0926/plantExample.jpg?v=1698683903468"
          alt="Plant Image"
        />
        <h3>Plant Name</h3>
        <img
          class="star"
          src="https://cdn.glitch.global/4cf42ca2-4f10-4b7c-b9ba-da3c09eb0926/empty_star.png?v=1698688473551"
          alt="Empty Star"
        />
        <form>
          <table id="plantsTable">
            <tr>
              <th>ID</th>
              <th>Common Name</th>
              <th>Biological Name</th>
              <th>Family</th>
              <th>Category</th>
              <th>Origin</th>
              <th>Climate</th>
              <th>Brightness Direction</th>
              <th>Low Temperature</th>
              <th>High Temperature</th>
              <th>Humidity</th>
              <th>Days Between Watering</th>
              <th>Image</th>
            </tr>
          </table>
        </form>
        <form id="addFavorite" action="/users/dashboard/addFavorite" method="POST">
          <div>
            <input
              type="text"
              id="plantID"
              name="plantID"
              placeholder="Plant ID"
              required
            />
            <input type="submit" value="Favorite" />
          </div>
        </form>
        <h4>Bio Name</h4>
        <table>
          <thead>
            <tr>
              <th class="brightness">Brightness</th>
              <th class="temperature">Temperature</th>
              <th class="humidity">Humidity</th>
              <th class="water">Water</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td class="brightness-val"></td>
              <td class="temperature-val"></td>
              <td class="humidity-val"></td>
              <td class="water-val"></td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </body>
  <footer class="footer"></footer>

  <script>
    const favorite = function () {
      let label = document.getElementById("testing")
      label.innerHTML = "tester"
    }
  </script>
</html>
